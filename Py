import pandas as pd

# Read the CSV file
df = pd.read_csv('abc.csv')

# Split the data into two dataframes based on the "operation type" column
buy_df = df[df['operation type'] == 'Buy']
sell_df = df[df['operation type'] == 'Sell']

# Write the dataframes to separate Excel files
buy_df.to_excel('buy_data.xlsx', index=False, sheet_name='Buy')
sell_df.to_excel('sell_data.xlsx', index=False, sheet_name='Sell')

print("Files 'buy_data.xlsx' and 'sell_data.xlsx' have been created.")
