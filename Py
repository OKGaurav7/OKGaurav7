# Filter rows where operation type is 'buy'
buy_df = output_df[output_df['operation type(buy or sell)'] == 'buy']

# Save buy data to a CSV file
buy_df.to_csv('buy_data.csv', index=False)

# Filter rows where operation type is 'sell'
sell_df = output_df[output_df['operation type(buy or sell)'] == 'sell']

# Save sell data to a CSV file
sell_df.to_csv('sell_data.csv', index=False)
