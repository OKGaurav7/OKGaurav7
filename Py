import pandas as pd

# Load the CSV file into a Pandas DataFrame
df = pd.read_csv("abc.csv")

# Split the DataFrame into two separate DataFrames based on the "operation type" column
buy_df = df[df["operation type"] == "Buy"]
sell_df = df[df["operation type"] == "Sell"]

# Save the two DataFrames to separate Excel files
buy_df.to_excel("buy_data.xlsx", index=False)
sell_df.to_excel("sell_data.xlsx", index=False)
