# Filter data where operation type is Buy
buy_df = output_df[output_df['operation type(buy or sell)'].str.contains('Buy', case=False)]

# Filter data where operation type is Sell
sell_df = output_df[output_df['operation type(buy or sell)'].str.contains('Sell', case=False)]

# Write the filtered DataFrames to separate Excel files
buy_df.to_excel('buy_data.xlsx', index=False, sheet_name='Buy')
sell_df.to_excel('sell_data.xlsx', index=False, sheet_name='Sell')
