import pandas as pd

# Read data from prodman.xlsx
prodman_df = pd.read_excel('prodman.xlsx')

# Read data from takara.xlsx
takara_df = pd.read_excel('takara.xlsx')

# Merge data from prodman.xlsx and takara.xlsx
xyz = pd.merge(prodman_df, takara_df, left_on='ObligorId', right_on='currentObligorId', how='inner')

# Read data from master.xlsx
master_df = pd.read_excel('master.xlsx')

# Merge master_df and xyz on 'Counterparty RDM Id' and 'Trading account code'
result_df = pd.merge(master_df, xyz, left_on='Counterparty RDM Id', right_on='Trading account code', how='inner')
